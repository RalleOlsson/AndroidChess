<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MenuActivity">
    <Button
            android:text="Multiplayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/multiplayerbutton" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="64dp"
            android:layout_marginTop="250dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toTopOf="@+id/aibutton"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="280dp"/>
    <Button
            android:text="Versus AI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/aibutton" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/multiplayerbutton"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="64dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="303dp" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/optionbutton"/>
    <Button
            android:text="Options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/optionbutton" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/aibutton" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="64dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="307dp" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/logoutbutton"/>
    <Button
            android:text="Log Out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logoutbutton"
            android:layout_marginTop="33dp"
            app:layout_constraintTop_toBottomOf="@+id/optionbutton" android:layout_marginBottom="128dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="64dp" app:layout_constraintEnd_toStartOf="@+id/shareButton"
            android:layout_marginEnd="154dp"/>
    <ImageView
            android:layout_width="175dp"
            android:layout_height="175dp" app:srcCompat="@drawable/qw"
            android:id="@+id/imageView" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="64dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="118dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="118dp"
            android:layout_marginBottom="540dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.041"/>
    <ImageButton
            android:layout_width="92dp"
            android:layout_height="64dp" app:srcCompat="@drawable/com_facebook_button_icon_blue"
            android:id="@+id/shareButton"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="44dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.883" android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.906"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:layout_marginEnd="131dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="124dp" app:layout_constraintStart_toEndOf="@+id/multiplayerbutton"
            app:layout_constraintHorizontal_bias="0.215" android:text="Username" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/eloView"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/eloView"
            android:text="Elo" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginBottom="256dp"
            app:layout_constraintBottom_toTopOf="@+id/shareButton" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="125dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="267dp"/>
</android.support.constraint.ConstraintLayout>
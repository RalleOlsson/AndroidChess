<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:id="@+id/textViewV"
            android:layout_width="166dp"
            android:layout_height="356dp"
            android:layout_marginStart="29dp"
            android:layout_marginTop="102dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="105dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonStart"
            app:layout_constraintEnd_toStartOf="@+id/textViewH"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/textViewH"
            android:layout_width="166dp"
            android:layout_height="356dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="102dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="104dp"
            app:layout_constraintBottom_toTopOf="@+id/ButtonReturn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textViewV"
            app:layout_constraintTop_toTopOf="parent" />

    <Button
            android:id="@+id/buttonStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="53dp"
            android:layout_marginTop="122dp"
            android:layout_marginEnd="69dp"
            android:layout_marginBottom="103dp"
            android:text="StartGame"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ButtonReturn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewV" />

    <Button
            android:id="@+id/ButtonReturn"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="69dp"
            android:layout_marginTop="121dp"
            android:layout_marginEnd="92dp"
            android:layout_marginBottom="104dp"
            android:text="Return"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/buttonStart"
            app:layout_constraintTop_toBottomOf="@+id/textViewH" />
</android.support.constraint.ConstraintLayout>